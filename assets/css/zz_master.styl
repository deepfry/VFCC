// -- angle classes
imgAnglesOdd()
	clip-path: polygon(0 0, calc(100% - 50px) 0, 100% 100%, 50px 100%);
	@media(max-width:992px)
		clip-path: polygon(0 0, calc(100% - 25px) 0, 100% 100%, 25px 100%);
	@media(max-width:767px)
		clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
imgAnglesEven()
	clip-path: polygon(50px 0, 100% 0, calc(100% - 50px) 100%, 0 100%);
	@media(max-width:992px)
		clip-path: polygon(25px 0, 100% 0, calc(100% - 25px) 100%, 0 100%);
	@media(max-width:767px)
		clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);

#first-section
	padding-bottom 50px
	padding-top 50px
	@media(max-width:992px)
		padding-bottom -50px
	@media(max-width:767px)
		padding-bottom -50px
	.container
		padding 100px 0
.angle:not(.btn):not(img):not(.masonry__item):not([class*="col-"])
	clip-path: polygon(0 100px, 100% 0, 100% calc(100% - 100px), 0 100%);
	margin-top -100px
	padding 150px 0
	z-index 2
	position relative
	&.footer
		margin-top -200px
		padding 100px 0 50px 0
		@media(max-width:992px)
			margin-top -50px
		@media(max-width:767px)
			margin-top -25px
	@media (max-width 992px)
		clip-path: polygon(0 50px, 100% 0, 100% calc(100% - 50px), 0 100%);
		margin-top -50px
		padding 100px 0
		&.footer
			padding 50px 0 50px 0
	@media (max-width:767px)
		clip-path: polygon(0 25px, 100% 0, 100% calc(100% - 25px), 0 100%);
		margin-top -25px
		padding 50px 0
		&.footer
			padding 25px 0 25px 0
a.btn.angle
	clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
	&:hover
		clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);
#map.angle
	padding 0

img.angle
	clip-path: polygon(0 0, calc(100% - 100px) 0, 100% 100%, 100px 100%);
	padding 0 !important
	@media(max-width:992px)
		clip-path: polygon(0 0, calc(100% - 25px) 0, 100% 100%, 25px 100%);
	@media(max-width:767px)
		clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);

.masonry__item.angle
	img
		padding 0px
.artist.angle:nth-child(odd), .masonry__item.angle:nth-child(odd)
	img.artist-photo, & > a:before, img
		imgAnglesOdd()
		transition 0.5s
	&:hover
		img.artist-photo, & > a:before, img.blog-photo
			clip-path: polygon(0 0, calc(100% - 35px) 0, 100% 100%, 35px 100%);
			transition 0.5s
			@media(max-width:992px)
				clip-path: polygon(0 0, calc(100% - 15px) 0, 100% 100%, 15px 100%);
			@media(max-width:767px)
				clip-path: polygon(0 0, calc(100% - 5px) 0, 100% 100%, 5px 100%);

.artist.angle:nth-child(even), .masonry__item.angle:nth-child(even)
	img.artist-photo, & > a:before, img
		imgAnglesEven()
		transition 0.5s
	&:hover
		img.artist-photo, & > a:before, img.blog-photo
			clip-path: polygon(35px 0, 100% 0, calc(100% - 35px) 100%, 0 100%);
			@media(max-width:992px)
				clip-path: polygon(15px 0, 100% 0, calc(100% - 15px) 100%, 0 100%);
			@media(max-width:767px)
				clip-path: polygon(5px 0, 100% 0, calc(100% - 5px) 100%, 0 100%);
